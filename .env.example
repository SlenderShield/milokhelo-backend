# Application Configuration
APP_NAME=milokhelo-backend
NODE_ENV=development
PORT=4000
HOST=localhost
API_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/milokhelo_dev

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOGGING_ENABLED=true

# Event Bus Configuration
EVENT_BUS_ADAPTER=memory

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# Authentication Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRATION=7d
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_MAX_AGE=604800000

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
OAUTH_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/callback
FRONTEND_URL=http://localhost:3000

# Google Calendar API Configuration
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:4000/api/v1/calendar/oauth/callback

# Push Notifications Configuration
PUSH_NOTIFICATIONS_ENABLED=false

# Firebase Cloud Messaging (FCM) Configuration
FCM_ENABLED=false
FCM_PROJECT_ID=your-firebase-project-id
FCM_CLIENT_EMAIL=your-firebase-client-email
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Apple Push Notification Service (APNS) Configuration
APNS_ENABLED=false
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.yourapp.bundleid
APNS_KEY_PATH=./apns-key.p8
APNS_PRODUCTION=false

# Feature Flags
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
