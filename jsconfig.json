{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["src/core/*"],
      "@/api/*": ["src/api/*"],
      "@/common/*": ["src/common/*"],
      "@/config/*": ["src/core/config/*"],
      "@/modules/*": ["src/api/v1/modules/*"],
      "@/new-modules/*": ["src/api/v1/modules/*"],
      "@/test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules", "dist", "logs", "temp_docs"]
}
