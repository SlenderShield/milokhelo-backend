{
  "name": "milokhelo-backend",
  "version": "1.0.0",
  "description": "Clean modular monolith backend with Node.js, Express, MongoDB, and Redis",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --import ./register-loader.js src/server.js",
    "dev:redis": "cross-env NODE_ENV=development EVENT_BUS_ADAPTER=redis nodemon --import ./register-loader.js src/server.js",
    "test": "cross-env NODE_ENV=test mocha --import ./register-loader.js --exit",
    "test:unit": "cross-env NODE_ENV=test mocha --import ./register-loader.js 'test/unit/**/*.test.js' --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --import ./register-loader.js 'test/integration/**/*.test.js' --exit",
    "test:coverage": "cross-env NODE_ENV=test c8 mocha --import ./register-loader.js --exit",
    "start": "cross-env NODE_ENV=production node --import ./register-loader.js src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "modular-monolith",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "clean-architecture"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@parse/node-apn": "^6.5.0",
    "bcrypt": "^6.0.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.0",
    "firebase-admin": "^13.5.0",
    "googleapis": "^164.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "prom-client": "^15.1.3",
    "redis": "^5.9.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/triple-beam": "^1.3.5",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
